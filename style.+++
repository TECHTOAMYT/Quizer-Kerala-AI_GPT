body {
  margin: 0;
  padding: 0;
  transition: background-color 0.3s, color 0.3s;
}

/* Light mode styles */
body.light-mode {
  background-color: white;
  color: black;
}

/* Dark mode styles */
body.dark-mode {
  background-color: black;
  color: white;
}

/* Toggle container */
.toggle-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20px;
}

.toggle {
  position: relative;
  width: 60px;
  height: 30px;
  background-color: #ccc;
  border-radius: 30px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.toggle::before {
  content: '‚òÄÔ∏è';
  position: absolute;
  left: 5px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 16px;
}

.toggle::after {
  content: 'üåô';
  position: absolute;
  right: 5px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 16px;
}

.toggle-slider {
  position: absolute;
  width: 26px;
  height: 26px;
  background-color: white;
  border-radius: 50%;
  top: 2px;
  left: 2px;
  transition: left 0.3s;
}

.toggle.active {
  background-color: #333;
}

.toggle.active .toggle-slider {
  left: 32px;
}
